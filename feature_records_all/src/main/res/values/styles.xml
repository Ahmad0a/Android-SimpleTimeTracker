<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TODO move from here and settings to core -->
    <style name="RecordsAllCard">
        <item name="cardBackgroundColor">?appCardBackgroundColor</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="RecordsAllText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecordsAllDivider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">?appDividerColor</item>
    </style>

</resources>