<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="snackbarStyle">@style/AppTheme.Snackbar</item>
        <item name="snackbarButtonStyle">@style/AppTheme.SnackbarButton</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="appContrastColor">@color/black</item>
        <item name="appTextPrimaryColor">@color/textPrimary</item>
        <item name="appLightTextColor">@color/textLight</item>
        <item name="appBackgroundColor">@color/colorBackground</item>
        <item name="appDialogBackground">@drawable/bg_rounded_bottom_sheet</item>
        <item name="appTextHintColor">@color/textHint</item>
        <item name="appArrow">@drawable/arrow</item>
        <item name="appDividerColor">@color/colorDivider</item>
        <item name="appDivider">@drawable/divider_drawable</item>
        <item name="appInputFieldBorder">@drawable/bg_input_field_border</item>
        <item name="appPieChartDividerColor">@color/pieChartDivider</item>
        <item name="appCardBackgroundColor">@color/cardBackground</item>
        <item name="appButtonOnCardBackgroundColor">@color/buttonOnCardBackground</item>
        <item name="appPopupBackground">@drawable/bg_spinner_popup</item>
        <item name="appPopupItemBackground">@drawable/bg_states_spinner_item</item>
        <item name="appTabSelectedColor">@color/colorTabSelected</item>
        <item name="appTabUnselectedColor">@color/colorTabUnselected</item>
        <item name="appActiveColor">@color/colorActive</item>
        <item name="appInactiveColor">@color/colorInactive</item>
        <item name="appIconColor">@color/colorIcon</item>
        <item name="appLegendColor">@color/colorLegend</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="snackbarStyle">@style/AppTheme.Snackbar</item>
        <item name="snackbarButtonStyle">@style/AppTheme.SnackbarButton</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Dark</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>

        <item name="appContrastColor">@color/white</item>
        <item name="appTextPrimaryColor">@color/textPrimaryDark</item>
        <item name="appLightTextColor">@color/textLightDark</item>
        <item name="appBackgroundColor">@color/colorBackgroundDark</item>
        <item name="appDialogBackground">@drawable/bg_rounded_bottom_sheet_dark</item>
        <item name="appTextHintColor">@color/textHintDark</item>
        <item name="appArrow">@drawable/arrow_dark</item>
        <item name="appDividerColor">@color/colorDividerDark</item>
        <item name="appDivider">@drawable/divider_drawable_dark</item>
        <item name="appInputFieldBorder">@drawable/bg_input_field_border_dark</item>
        <item name="appPieChartDividerColor">@color/pieChartDividerDark</item>
        <item name="appCardBackgroundColor">@color/cardBackgroundDark</item>
        <item name="appButtonOnCardBackgroundColor">@color/buttonOnCardBackgroundDark</item>
        <item name="appPopupBackground">@drawable/bg_spinner_popup_dark</item>
        <item name="appPopupItemBackground">@drawable/bg_states_spinner_item_dark</item>
        <item name="appTabSelectedColor">@color/colorTabSelectedDark</item>
        <item name="appTabUnselectedColor">@color/colorTabUnselectedDark</item>
        <item name="appActiveColor">@color/colorActiveDark</item>
        <item name="appInactiveColor">@color/colorInactiveDark</item>
        <item name="appIconColor">@color/colorIconDark</item>
        <item name="appLegendColor">@color/colorLegendDark</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textColorPrimary">?appTextPrimaryColor</item>
        <item name="textColorAlertDialogListItem">?appTextPrimaryColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.DialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.DialogButton</item>
    </style>

    <style name="AppTheme.Dialog.Dark" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textColorPrimary">?appTextPrimaryColor</item>
        <item name="textColorAlertDialogListItem">?appTextPrimaryColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.DialogButton.Dark</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.DialogButton.Dark</item>
    </style>

    <style name="AppTheme.DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.DialogButton.Dark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Snackbar" parent="Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="AppTheme.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="ChangeRecordTypeInputFieldCard">
        <item name="cardBackgroundColor">?appBackgroundColor</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/input_field_corner_radius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ChangeRecordTypeText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChangeItemNameEditText">
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/blue_grey_300</item>
    </style>

    <style name="EditTextMultiLine">
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColorHint">@color/blue_grey_300</item>
    </style>

    <style name="ChangeItemInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_field_corner_radius</item>
        <item name="boxStrokeColor">@color/blue_grey_50</item>
        <item name="errorTextAppearance">@style/ChangeItemErrorStyle</item>
        <item name="hintTextAppearance">@style/ChangeItemHintStyle</item>
        <item name="hintTextColor">@color/blue_grey_300</item>
    </style>

    <style name="ChangeItemHintStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChangeItemErrorStyle">
        <item name="android:textColor">@color/red_600</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ColorIconItem">
        <item name="android:layout_width">@dimen/color_icon_item_width</item>
        <item name="android:layout_height">@dimen/color_icon_item_height</item>
        <item name="android:layout_marginStart">@dimen/color_icon_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/color_icon_item_margin</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/color_icon_item_corner_radius</item>
        <item name="cardElevation">@dimen/color_icon_item_elevation</item>
    </style>

    <style name="RecordTypeCard">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/record_type_card_corner_radius</item>
        <item name="cardElevation">@dimen/record_type_card_elevation</item>
    </style>

    <style name="RecordTypeIcon">
        <item name="backgroundTint">?appIconColor</item>
    </style>

    <style name="RecordTypeText">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">?appIconColor</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">4sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="RecordTypeItem">
        <item name="android:layout_width">@dimen/record_type_card_width</item>
        <item name="android:layout_height">@dimen/record_type_card_height</item>
        <item name="cardElevation">@dimen/record_type_card_elevation</item>
    </style>

    <style name="SettingsCard">
        <item name="cardBackgroundColor">?appCardBackgroundColor</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="SettingsText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsSecondaryText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsTranslatorsText" parent="SettingsSecondaryText">
        <item name="android:paddingTop">12dp</item>
    </style>

</resources>