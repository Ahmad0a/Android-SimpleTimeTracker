<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RecordTypeView">
        <attr name="itemName" format="string" />
        <attr name="itemIcon" format="reference" />
        <attr name="itemColor" format="color" />
        <attr name="itemUseCompatPadding" format="boolean" />
        <attr name="itemPadding" format="dimension" />
        <attr name="itemAlpha" format="float" />
    </declare-styleable>

    <declare-styleable name="RecordView">
        <attr name="itemName" />
        <attr name="itemIcon" />
        <attr name="itemColor" />
        <attr name="itemTimeStarted" format="string" />
        <attr name="itemTimeEnded" format="string" />
        <attr name="itemDuration" format="string" />
    </declare-styleable>

    <declare-styleable name="RunningRecordView">
        <attr name="itemName" />
        <attr name="itemIcon" />
        <attr name="itemColor" />
        <attr name="itemTimeStarted" />
        <attr name="itemTimer" format="string" />
    </declare-styleable>
</resources>